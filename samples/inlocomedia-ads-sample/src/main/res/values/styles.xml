<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

   <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_bg</item>
        <item name="android:icon">@drawable/ic_actionbar</item>
    </style>

    <style name="MainCellTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawablePadding">@dimen/margin</item>
    </style>

</resources>