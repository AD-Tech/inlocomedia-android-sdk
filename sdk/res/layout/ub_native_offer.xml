<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <in.ubee.api.ui.views.WebImageView
            android:id="@id/ub_image"
            android:layout_width="@dimen/ub_icon_big"
            android:layout_height="@dimen/ub_icon_big"
            android:layout_marginLeft="@dimen/ub_margin"
            android:layout_marginRight="@dimen/ub_margin"
            android:layout_marginTop="@dimen/ub_margin"
            android:contentDescription="@string/ub_icon"
            android:src="@drawable/ub_native_ad_large_icon_placeholder" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/ub_margin"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@id/ub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="-3dip"
                android:singleLine="true"
                android:text="@string/ub_title" />

            <TextView
                android:id="@id/ub_offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:gravity="center_vertical"
                android:text="@string/ub_offer" />

            <TextView
                android:id="@id/ub_expiration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-3dip"
                android:text="@string/ub_expiration" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@id/ub_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/ub_margin"
        android:paddingLeft="@dimen/ub_margin"
        android:paddingRight="@dimen/ub_margin"
        android:paddingTop="6dip"
        android:text="@string/ub_description" />

</LinearLayout><!-- From: file:/Users/gabriel/workspace/android/inlocomedia-android-sdk-private/inloco-android-sdk/res/layout/ub_native_offer.xml -->